@page "/AdminFrontPage"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]


@rendermode InteractiveServer


<h3 class="text-white">Admin Settings</h3>

<style>
    .offcanvas-body {
        background-color: black;
    }

    .h1 {
        color: white;
    }

    .offcanvas-header {
        background-color: black;
    }

    .center-image {
        text-align: center;
    }

        .center-image img {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

    .container-fluid mt-3 {
        justify-content: center;
    }

</style>

<div class="offcanvas offcanvas-start" id="demo">
    <div class="offcanvas-header">
        <h1 class="offcanvas-title text-white"> Settings </h1>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <div>
            <p></p>
            <a href="/CreateEventPage" id="CreateEventPage" class="btn btn-success">Create New Event</a> <br />
        </div>
        <div>
            <p></p>
            <a href="/EditEventPage" id="EditEventPage" class="btn btn-success">Update Event Information</a><br />
        </div>
        <div>
            <p></p>
            <a href="/EventGuestListPage" id="EventGuestListPage" class="btn btn-success">See Guest list</a><br />
        </div>
        <p><a class="container" href="/AdminFrontPage"><img src="/images/13neverQ.png" style="height:200px; width:200px;" /></a></p>
    </div>

</div>

<div class="container-fluid mt-3">

    <div class="justify-content-center">
        <button class="btn btn-outline-success justify-content-center" id="settingsBtn" type="button" data-bs-toggle="offcanvas" data-bs-target="#demo">
            Settings
        </button>
    </div>

</div>

<div class="container-xl center-image">

    <a class="container" href="/AdminFrontPage"><img src="/images/kvillestudio.png" style="height:700px; width:700px;" /></a>

</div>

