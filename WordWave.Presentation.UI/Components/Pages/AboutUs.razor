@page "/AboutUs"
@inject NavigationManager NavigationManager

<div class="about-us-page">
    <!-- Hero Section -->
    <section class="about-hero-section text-center text-light d-flex align-items-center justify-content-center">
        <div class="container">
            <h1 class="display-4">About WordWave</h1>
            <p class="lead">Empowering voices, connecting readers, and fostering a community of thinkers and creators.</p>
        </div>
    </section>

    <!-- Mission & Vision Section -->
    <section class="mission-vision-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center">
                    <h2>Our Mission</h2>
                    <p>To provide a platform where stories come alive, ideas are shared, and communities grow. We believe in the power of words to inspire, educate, and connect people globally.</p>
                </div>
                <div class="col-md-6 text-center">
                    <h2>Our Vision</h2>
                    <p>We envision a world where knowledge flows freely, creativity flourishes, and readers and writers unite to shape meaningful dialogues across borders and generations.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->

    <section class="team-section py-5 bg-light">
        <h2 class="text-center mb-5">Meet Our Team</h2>

        <div class="container">
            <div class="row">
                @foreach (var member in teamMembers)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100 text-center">
                            <div class="card-body">
                                <h5 class="card-title">@member.Name</h5>
                                <p class="card-text text-muted">@member.Position</p>
                                <p class="card-text">@member.Bio</p>
                                <a href="@member.LinkedInUrl" class="btn btn-outline-primary" target="_blank">
                                    <i class="bi bi-linkedin"></i> Connect
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Contact Us Section -->
    <section class="contact-us-section text-center py-5">
        <div class="container">
            <h2>Contact Us</h2>
            <p class="lead">Have questions? Want to connect? Reach out, and let’s start a conversation!</p>
            <button class="btn btn-primary" @onclick="NavigateToContact">Get in Touch</button>
        </div>
    </section>
</div>

